#!/usr/bin/env bash

if [ -z "${VSI_COMMON_DIR+set}" ]; then
  VSI_COMMON_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.."; pwd)"
fi

source "${VSI_COMMON_DIR}/tests/testlib.bsh"

check_ans()
{
  [ "$(yarp <<< "${doc}")" = "${ans}" ]
}

common_yarp_test()
{
  doc="a:"
  ans="a ="
  check_ans

  doc="
a:"
  check_ans

  doc="
a:
"
  check_ans

  doc="\
a:
  - 1
  - 2"
  ans="\
a =
a[0] = 1
a[1] = 2"
  check_ans

# This is a would be nice feature, but docker compose parses this out, so it's
