#!/usr/bin/env bash

. "$(dirname "${BASH_SOURCE[0]}")/testlib.bsh"

VSI_COMMON_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.."; pwd)"
. "${VSI_COMMON_DIR}/linux/docker_functions.bsh"
. "${VSI_COMMON_DIR}/linux/just_functions.bsh"
. "${VSI_COMMON_DIR}/linux/elements.bsh"

setup()
{
  compose_file='version: "3.2"
services:
  nb:
    image: blah
    volumes:
    - /tmp:/mnt
    - test:/opt
# here is a comment
    # here is another
  foo:
    image: bar
    volumes:
  bar:
    image: foo
volumes:
  test:'

  compose_file_long='version: "3.2"
services:
  nb:
    image: blah
    volumes:
    - /tmp:/mnt
    - source: /home/user/src
      target: /src
      type: bind
    - test:/opt
    - source: internal
      target: /src
      type: volume
    - target: /tmp2
      type: tmpfs
  foo:
    image: bar
    volumes:
  bar:
    image: foo
volumes:
  test:'

  compose_file_hay="version: '3.2'
services:
  test_hay:
    image: alpine
    command: sh -c 'echo horse'
    network_mode: 'bridge'"

  track_touched_files
}

