#!/usr/bin/env bash

source "$(dirname "${BASH_SOURCE[0]}")/testlib.bsh"

if [ -z ${VSI_COMMON_DIR+set} ]; then
  VSI_COMMON_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.."; pwd)"
fi

common_findin_test()
{
  [ "$(findin 1 1)" -eq 0 ]
  [ "$(findin 1)" -eq -1 ]
  [ "$(findin 1 11 22 33)" -eq -1 ]
  [ "$(findin 1 2 3 4 5 1)" -eq 4 ]
  [ "$(findin 1 2 3 1 4 5 1)" -eq 2 ]
}

begin_test "findin function"
(
  setup_test
  . "${VSI_COMMON_DIR}/linux/findin"

  [ "$(type -t findin)" = "function" ]

  common_findin_test
)
end_test

begin_test "findin CLI"
(
  setup_test

  [ "$(type -t findin)" = "file" ]

  common_findin_test
)
end_test