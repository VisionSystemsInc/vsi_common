#!/usr/bin/env bash

. "$(dirname "${BASH_SOURCE[0]}")/testlib.sh"

VSI_COMMON_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.."; pwd)"

common_isin_test()
{
  isin 1 1
  not isin 1
  not isin 1 11 22 33
  isin 1 2 3 4 5 1
  isin 1 2 3 1 4 5
}

begin_test "isin function"
(
  setup_test
  . "${VSI_COMMON_DIR}/linux/isin"

  [ "$(type -t isin)" = "function" ]

  common_isin_test
)
end_test

begin_test "isin CLI"
(
  setup_test

  [ "$(type -t isin)" = "file" ]

  common_isin_test
)
end_test