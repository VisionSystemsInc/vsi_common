#!/usr/bin/env bash

source "$(dirname "${BASH_SOURCE[0]}")/testlib.bsh"

if [ -z ${VSI_COMMON_DIR+set} ]; then
  VSI_COMMON_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/.."; pwd)"
fi

source "${VSI_COMMON_DIR}/linux/just_entrypoint_user_functions.bsh"

begin_test "filter docker variables"
(
  setup_test

  PROJECT_VAR1=15
  VAR2_DOCKER=16
  PROJECT_VAR1_DOCKER=17

  JUST_FILTER_DOCKER=0 filter_docker_variables PROJECT
  [ "${PROJECT_VAR1-}" = "15" ]
  [ "${VAR2_DOCKER-}" = "16" ]
  [ "${PROJECT_VAR1_DOCKER-}" = "17" ]

  filter_docker_variables PROJECT
  [ "${PROJECT_VAR1-}" = "15" ]
  [ "${VAR2_DOCKER-}" = "16" ]
  [ -z "${PROJECT_VAR1_DOCKER+set}" ]
)
end_test

begin_test "docker_convert_paths"
(
  setup_test
  QUESTS=('//dir/dir2//dir3://foo//bar'
          'test://this'
          '/foo//bar')
  ANS=('/dir/dir2//dir3:/foo//bar'
       'test:/this'
       '/foo//bar')

  JUST_HOST_WINDOWS=1

  # Patch for bashcov
  export -n PS4

  for q in "${!QUESTS[@]}"; do
    export ATEST="${QUESTS[$q]}"
    export bbqTEST="${QUESTS[$q]}"
    export CFOO="${QUESTS[$q]}"
    export DBAR="${QUESTS[$q]}"

    (
      JUST_NO_PATHCONV='.*TEST' docker_convert_paths
      [ "${ATEST}" = "${QUESTS[$q]}" ]
      [ "${bbqTEST}" = "${QUESTS[$q]}" ]
      [ "${CFOO}" = "${ANS[$q]}" ]
      [ "${DBAR}" = "${ANS[$q]}" ]
    )

    (
      JUST_NO_PATHCONV='CFOO|.*AR' docker_convert_paths
      [ "${ATEST}" = "${ANS[$q]}" ]
      [ "${bbqTEST}" = "${ANS[$q]}" ]
      [ "${CFOO}" = "${QUESTS[$q]}" ]
      [ "${DBAR}" = "${QUESTS[$q]}" ]
    )

    (
      docker_convert_paths
      [ "${ATEST}" = "${ANS[$q]}" ]
      [ "${bbqTEST}" = "${ANS[$q]}" ]
      [ "${CFOO}" = "${ANS[$q]}" ]
      [ "${DBAR}" = "${ANS[$q]}" ]
    )
  done
)
end_test
